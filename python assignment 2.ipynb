   "source": [
    " 1. Create the below pattern using nested for loop in Python.\n",
    " \n",
    "*\n",
    "* *\n",
    "* * *\n",
    "* * * *\n",
    "* * * * *\n",
    "* * * *\n",
    "* * *\n",
    "* *\n",
    "*"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "* \n",
      "* * \n",
      "* * * \n",
      "* * * * \n",
      "* * * * * \n",
      "* * * * \n",
      "* * * \n",
      "* * \n",
      "* \n"
     ]
    }
   ],
   "source": [
    "def printStarPatten(n,k):\n",
    "    for i in range(n):\n",
    "\n",
    "        if(i>= ((n//2)+1)):\n",
    "            print(\"* \"*(i-k))\n",
    "            k=k+2\n",
    "        else:\n",
    "             print(\"* \"*(i+1))\n",
    "printStarPatten(9,1)"
   ]
  },
